/* pages/home/home.wxss */
.outerst_layer {
  padding: 10rpx;
}
.top_block {
  width: 730rpx;
  height: 354rpx;

  position: relative;
  margin-bottom: 10rpx;
}
.top_block_bg{
  width: 730rpx;
  height: 354rpx;
}
.top_block .user_msg {
  position: absolute;
  width: 650rpx;
  left: 40rpx;
  top: 50%;
  transform: translateY(-100%);
  display: flex;
  align-items: center;
}
.top_block .user_msg .user_avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.top_block .user_msg .user_info {
  color: #333;
  line-height: 1;
}
.top_block .user_msg .user_info .user_name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.top_block .user_msg .user_info .to_history_btn {
  font-size: 26rpx;
}
.top_block .history_icon_btn {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: -20rpx;
  top: 50%;
  transform: translateY(-50%);
}
.content_block{
  display: flex;
  flex-wrap: wrap;
}
.content_block .act_item{
   width: 236rpx;
   height: 236rpx;
   margin-right:10rpx;
   background-color: #a1d2ce;
   margin-bottom: 10rpx;
}
.content_block .act_item.activite{
  background-color: #1d8574;
}
.content_block .act_item.no_margin_right{
  margin-right: 0;
}


.content_block .act_item .act_pic_wrapper{
  padding-top: 60rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 15rpx;
}
.content_block .act_item .act_pic_wrapper .act_pic{
  width: 80rpx;
  height:80rpx;
}
.content_block .act_item .act_name{
  font-size: 28rpx;
  color: #000;
  text-align: center;
  padding:0 20rpx;
}