/* pages/login/login.wxss */
.login_layer{
  position: absolute;
  top:250rpx;
 left: 0;
 right: 0;
 padding: 0 30rpx;
}
.login_layer .user_msg{
  display: flex;
  margin-bottom: 100rpx;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.login_layer .user_msg .user_avatar{
  height: 180rpx;
  width: 180rpx;
  border-radius: 50%;
  display: block;
  overflow: hidden;
}
.login_layer .user_msg .user_name{
  margin-top: 30rpx;
  font-size: 60rpx;
}
.login_layer  .login_btn{
  width: 100%;
  height: 90rpx;
  background-color: #1d8574;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 36rpx;
}